{
    "container": {
        "type": "DOCKER",
        "docker": {
            "network": "BRIDGE",
            "image": "localhost:5000/dev/haproxy",
            "forcePullImage": true,
            "parameters": [
                { "key": "hostname", "value": "haproxy.weave.local" },
                { "key": "env", "value": "WEAVE_CIDR=net:10.32.3.0/24" },
                { "key": "env", "value": "MARATHON_URL=mesos-master-1.ognitio.net" },
                { "key": "env", "value": "MARATHON_URL=8080" }
            ]
        },
        "volumes": [
            {
                "containerPath": "/dev/log",
                "hostPath": "/dev/log",
                "mode": "RO"
            }
        ]
    },
    "id": "haproxy",
    "instances": 1,
    "cpus": 1,
    "mem": 512,
    "constraints": [
        [
            "hostname",
            "UNIQUE"
        ]
    ],
    "cmd": "/run.sh"
}
