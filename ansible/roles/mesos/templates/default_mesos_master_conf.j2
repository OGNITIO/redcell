## Default mesos-master configuration

# Definition of the mesos-master cluster name
export MESOS_CLUSTER={{cluster_name}}

# Definition of the mesos-master qorum
export MESOS_QUORUM={{mesos_master_quorum}}

# Definition of the mesos-master port
export MESOS_PORT={{mesos_masters_port}}

export MESOS_AUTHENTICATE=true
export MESOS_AUTHENTICATE_SLAVES=true
export MESOS_AUTHENTICATORS=crammd5
export MESOS_CREDENTIALS=/srv/mesos/credentials
