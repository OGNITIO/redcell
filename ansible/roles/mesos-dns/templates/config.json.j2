{
    "zk": "zk://{% for host in groups['zookeeper'] %}{{hostvars[host]['ansible_eth0']['ipv4']['address']}}:2181{% if not loop.last%},{% endif %}{% endfor %}/mesos",
    "masters": [{% for host in groups['all'] %}"{% if hostvars[host]['mesos_mode'] == 'master' or hostvars[host]['mesos_mode'] == 'master-slave' %}{{hostvars[host]['ansible_eth0']['ipv4']['address']}}:5050{% endif %}"{% if not loop.last%},{% endif %}{% endfor %}],
    "refreshSeconds": {{mesos_dns_refresh_seconds}},
    "ttl": 60,
    "domain": "{{mesos_dns_domain_name}}",
    "ns": "ns1",
    "port": {{mesos_dns_port}},
    "resolvers": ["8.8.8.8"],
    "timeout": 5,
    "listener": "0.0.0.0",
    "SOAMname": "root.ns1.mesos",
    "SOARname": "ns1.mesos",
    "SOARefresh": 60,
    "SOARetry":   600,
    "SOAExpire":  86400,
    "SOAMinttl": 60,
    "dnson": true,
    "httpon": true,
    "httpport": 8123,
    "externalon": true,
    "recurseon": true
}            
